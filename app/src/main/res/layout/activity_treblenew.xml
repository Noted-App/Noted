<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.student.noted.newActivity">'

    <EditText
        android:id="@+id/simpleEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="TITLE"
        android:padding="15dp"
        android:textColorHint="#fff"
        android:textStyle="bold|italic"
        android:gravity="center"
        android:layout_alignTop="@+id/imageView"
        android:layout_centerHorizontal="true" /><!--gravity of a edit text-->
    android:layout_alignParentStart="true" /><!--set background color black-->



    <ImageView
        android:layout_width="70dp"
        android:layout_height="210dp"
        android:src="@drawable/treble"
        android:id="@+id/imageView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/horizontalScrollView">

        <LinearLayout
            android:id="@+id/gllayout"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:orientation="horizontal">


            <ImageButton
                android:layout_width="39dp"
                android:layout_height="44dp"
                android:layout_margin="10sp"
                android:padding="10dp"
                android:background="@drawable/quarternote"/>


            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="39dp"
                android:layout_height="44dp"
                android:layout_margin="10sp"
                android:background="@drawable/eighthnoterest"
                android:padding="10dp" />

            <ImageButton
                android:layout_width="39dp"
                android:layout_height="44dp"
                android:layout_margin="10sp"
                android:padding="10dp"
                android:background="@drawable/eighthnotes"/>

            <ImageButton
                android:layout_width="39dp"
                android:layout_height="44dp"
                android:layout_margin="10sp"
                android:padding="10dp"
                android:background="@drawable/dottedhalfnote2"/>

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="39dp"
                android:layout_height="44dp"
                android:layout_margin="10sp"
                android:background="@drawable/halfnote"
                android:padding="10dp" />

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="44dp"
                android:layout_margin="10sp"
                android:padding="10dp"
                android:background="@drawable/sixteenthnotes"/>

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="39dp"
                android:layout_height="44dp"
                android:layout_margin="10sp"
                android:background="@drawable/wholenote"
                android:padding="10dp" />

            <ImageButton
                android:layout_width="39dp"
                android:layout_height="44dp"
                android:layout_margin="10sp"
                android:padding="10dp"
                android:background="@drawable/quarternoterest"/>

            <ImageButton
                android:layout_width="39dp"
                android:layout_height="44dp"
                android:layout_margin="10sp"
                android:padding="10dp"
                android:background="@drawable/halfnoterest"/>

            <ImageButton
                android:layout_width="39dp"
                android:layout_height="44dp"
                android:layout_margin="10sp"
                android:padding="10dp"
                android:background="@drawable/wholenoterest"/>

            <ImageButton
                android:layout_width="39dp"
                android:layout_height="44dp"
                android:layout_margin="10sp"
                android:padding="10dp"
                android:background="@drawable/creshendo"/>

            <!--<ImageButton-->
                <!--android:layout_width="39dp"-->
                <!--android:layout_height="44dp"-->
                <!--android:layout_margin="10sp"-->
                <!--android:padding="10dp"-->
                <!--android:background="@drawable/dottedquarternote"/>-->

            <ImageButton
                android:layout_width="39dp"
                android:layout_height="44dp"
                android:layout_margin="10sp"
                android:padding="10dp"
                android:background="@drawable/repeatsign"/>

        </LinearLayout>
    </HorizontalScrollView>



    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/instrument_array"
        android:layout_below="@+id/spinner2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="45dp" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/feel_array"
        android:layout_alignTop="@+id/seekBar"
        android:layout_alignParentEnd="true" />






    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/simpleEditText"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginStart="42dp"
        android:weightSum="1">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_weight="1">
            .....
        </LinearLayout>

    </LinearLayout>

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_weight="60"
        android:layout_below="@+id/textViews"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BMP"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:id="@+id/textViews"
        android:layout_marginEnd="16dp"
        android:layout_below="@+id/horizontalScrollView"
        android:layout_alignEnd="@+id/imageView" />


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp">

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:background="#000000" />

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:background="#000000" />
        <View
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:background="#000000" />
        <View
            android:id="@+id/line4"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:background="#000000" />
        <View
            android:id="@+id/line5"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:background="#000000" />





    </LinearLayout>







</RelativeLayout>



