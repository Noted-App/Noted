<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.student.noted.newActivity">'

    <EditText
        android:id="@+id/simpleEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="TITLE"
        android:padding="15dp"
        android:textColorHint="#fff"
        android:textStyle="bold|italic"
        android:gravity="center"
        android:layout_alignTop="@+id/imageView"
        android:layout_centerHorizontal="true" /><!--gravity of a edit text-->
    android:layout_alignParentStart="true" /><!--set background color black-->



    <ImageView
        android:layout_width="70dp"
        android:layout_height="210dp"
        android:src="@drawable/treble"
        android:id="@+id/imageView"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="27dp" />

    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:scrollbars="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="39dp"
                android:layout_height="44dp"
                android:layout_margin="10sp"
                android:padding="10dp"
                android:background="@drawable/eighthnote"/>

            <ImageButton
                android:layout_width="39dp"
                android:layout_height="44dp"
                android:layout_margin="10sp"
                android:padding="10dp"
                android:background="@drawable/wholenote"/>

            <ImageButton
                android:layout_width="39dp"
                android:layout_height="44dp"
                android:layout_margin="10sp"
                android:padding="10dp"
                android:background="@drawable/halfnote"/>

            <ImageButton
                android:layout_width="39dp"
                android:layout_height="44dp"
                android:layout_margin="10sp"
                android:padding="10dp"
                android:background="@drawable/eighthnoterest"/>


            <ImageButton
                android:layout_width="39dp"
                android:layout_height="44dp"
                android:layout_margin="10sp"
                android:padding="10dp"
                android:background="@drawable/quarternote"/>

            <ImageButton
                android:layout_width="39dp"
                android:layout_height="44dp"
                android:layout_margin="10sp"
                android:padding="10dp"
                android:background="@drawable/eighthnotes"/>

            <ImageButton
                android:layout_width="39dp"
                android:layout_height="44dp"
                android:layout_margin="10sp"
                android:padding="10dp"
                android:background="@drawable/dottedhalfnote"/>

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="44dp"
                android:layout_margin="10sp"
                android:padding="10dp"
                android:background="@drawable/sixteenthnotes"/>

            <ImageButton
                android:layout_width="39dp"
                android:layout_height="44dp"
                android:layout_margin="10sp"
                android:padding="10dp"
                android:background="@drawable/quarternoterest"/>

            <ImageButton
                android:layout_width="39dp"
                android:layout_height="44dp"
                android:layout_margin="10sp"
                android:padding="10dp"
                android:background="@drawable/halfnoterest"/>

            <ImageButton
                android:layout_width="39dp"
                android:layout_height="44dp"
                android:layout_margin="10sp"
                android:padding="10dp"
                android:background="@drawable/wholenoterest"/>

        </LinearLayout>

    </HorizontalScrollView>

</RelativeLayout>


